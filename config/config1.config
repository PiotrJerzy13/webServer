http {
    server {
        listen 8082;
        server_name server1.local;
		client_max_body_size 10M;

        root ./www/html;
        error_page 404 /404.html;
        error_page 500 502 503 504 /50x.html;
        index index.html;

 		location / {
    	methods GET POST DELETE;
    	try_files $uri $uri/ =404;
		}

        location /google {
            return 301 https://www.google.com;
        }

        location /youtube {
            return 302 https://www.youtube.com;
        }

        location /error_pages {
            autoindex on;
        }

		location /upload {
    		allow POST;
			upload_dir ./www/html/upload;
		}

    location /cgi-bin/ {
        cgi_pass /usr/bin/python3;
        cgi_param SCRIPT_FILENAME /Users/EleniPerpe/webServer/cgi-bin$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
        cgi_param QUERY_STRING $query_string;
        cgi_param REQUEST_METHOD $request_method;
    }
	}
    server {
        listen 8081;
        server_name server2.local;
		client_max_body_size 10M;

        root ./www/html1;
        error_page 404 /404.html;
        error_page 500 502 503 504 /50x.html;
        index index2.html;

        location /google {
            return 301 https://www.youtube.com;
        }

        location /files {
            autoindex on;
        }

        location / {
            index index2.html;
        }

		location / {
    	methods GET POST DELETE;
    	try_files $uri $uri/ =404;
		}

    location /cgi-bin/ {
        cgi_pass /usr/bin/python3;
        cgi_param SCRIPT_FILENAME /Users/EleniPerpe/webServer/cgi-bin$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
        cgi_param QUERY_STRING $query_string;
        cgi_param REQUEST_METHOD $request_method;
    }
    }
}
